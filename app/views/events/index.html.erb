<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Who? What? Where?</th>
      <th>Starts at</th>
      <th>Price</th>
      <th>Soldout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event_title(event) %></td>
        <td><%= time_tag(event.starts_at) %></td>
        <td><%= number_to_currency(event.price, precision: 2) %></td>
        <td><%= nice_soldout(event.soldout) %></td>
        <td><%= link_to('Show', event)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
