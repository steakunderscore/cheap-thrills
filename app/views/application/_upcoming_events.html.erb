<h2>Upcoming events</h2>
<% if upcoming_events.present? %>
  <table>
    <thead>
      <tr>
        <th>When and where</th>
      </tr>
    </thead>

    <tbody>
      <% upcoming_events.each do |event| %>
        <tr>
          <td><%= link_to(when_and_where(event), event)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Sorry there are no upcoming events for this artist</p>
<% end %>
